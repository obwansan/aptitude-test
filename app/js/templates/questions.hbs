            <input type="radio" name="answer_{{id}}">{{option3}}
        </p>
        {{/if}}
        {{#if option4}}
        <p>
            <input type="radio" name="answer_{{id}}">{{option4}}
        </p>
        {{/if}}
        {{#if option5}}
